<%- include("header") %>

<%- include("navbar") %>

<main class="container">
  <div class="row pt-8">
    <div class="col-12">
        <h2>View List of Employee Records</h2>


<% if (employees.length) { %>

  <h2> Employee List </h2>
  <br /> <br />

  <a href="/new" >Add New</a>

  <table class="table table‐hover">

    <thead class="thead‐dark">

      <tr>
        <th>First Name</th>
        <th>Last Name</th>
      </tr>
    </thead>
    <tbody>

      <% employees.forEach(function (entry) { %>
      <tr>
        <td>
          <%= entry.firstName %>
        </td>
        <td>
          <%= entry.lastName %>
        </td>
        <td>
          <a href="/view/<%= entry.name %>">VIEW</a>
        </td>

      </tr>
    </tbody>

      <% }) %>
    
  </table>
    <% } else { %>
  No Entries! <a href="/new" >Add one!</a>
    <% } %>
    <br />
    </div>
  </div>
</main>


<%- include("footer") %>
